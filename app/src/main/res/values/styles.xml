<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FilterToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <!-- texto -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>

        <!-- borda -->
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@android:color/white</item>

        <!-- fundo selecionado via selector -->
        <item name="backgroundTint">@color/filter_toggle_bg</item>

        <!-- padding / altura -->
        <item name="android:minHeight">40dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>

        <!-- cantos arredondados -->
        <item name="shapeAppearanceOverlay">@style/FilterRounded</item>
    </style>

    <style name="FilterRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

</resources>
